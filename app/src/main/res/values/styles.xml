<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">@color/dashboard_card_color</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">#3E3E4A</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CalculatorButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="cornerRadius">100dp</item>
    </style>
</resources>